---
import NewsCard from "../cards/newsCard.astro";
import HeaderSection from "./headerSection.astro";
import { articlesHandler } from "../../handlers/articles";

const articles = articlesHandler.allArticles();
---

<section class="container pt-12 pb-0 space-y-4" data-pagefind-ignore="all">
  <HeaderSection
    title="Latest Posts"
    link_title="View all"
    link_url="/blog"
  />
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 gap-y-6 md:grid-rows-2">
    {
      articles
        .slice(0, 9)
        .map((article, index) => <NewsCard article={article} index={index} />)
    }
  </div>
</section>
